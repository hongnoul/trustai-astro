---
import BaseLayout from '../layouts/BaseLayout.astro';
---

<BaseLayout title="Contact | TrustAI" description="Get in touch with the TrustAI team">
  <!-- Background fire video -->
  <video
    src="/fire.mp4"
    autoplay
    muted
    loop
    playsinline
    class="hidden md:block absolute bottom-10 left-80 w-64 pointer-events-none invert z-1"
  />

  <div class="w-full min-h-screen bg-white mt-10 sm:mt-16 md:mt-24 relative">
    <div class="mx-auto max-w-5xl px-6 sm:px-10 md:px-0">
      <div class="flex flex-col md:flex-row">
        <!-- Left container -->
        <div class="md:w-1/2 relative min-h-[7rem] sm:min-h-[9rem] md:min-h-0">
          <h1 class="static md:absolute text-[clamp(3rem,10vw,6rem)] md:text-9xl font-bold text-black z-2 leading-[0.95]">
            Get in Touch.
          </h1>
        </div>

        <!-- Right container -->
        <div class="md:w-1/2">
          <div class="bg-white pt-8 sm:pt-12 md:pt-18">
            <form class="space-y-6">
              <input
                id="name"
                type="text"
                placeholder="Your name *"
                class="w-full px-4 py-3 md:py-2 border-b border-gray-300 focus:outline-none focus:border-black text-base md:text-sm"
              />

              <input
                id="email"
                type="email"
                placeholder="Email *"
                class="w-full px-4 py-3 md:py-2 border-b border-gray-300 focus:outline-none focus:border-black text-base md:text-sm"
              />

              <textarea
                id="message"
                placeholder="Your message"
                class="w-full h-32 px-4 py-3 md:py-2 border-b border-gray-300 focus:outline-none focus:border-black text-base md:text-sm"
              />

              <button
                type="submit"
                class="group flex items-center justify-between w-full bg-black px-6 py-3 text-white font-medium hover:cursor-pointer transition"
              >
                <span class="transition-all duration-200 group-hover:text-[1.1em] group-hover:tracking-tight">
                  Submit
                </span>
                <span class="flex h-3 w-3 items-center justify-center bg-white transition group-hover:scale-110"></span>
              </button>

            </form>
          </div>
        </div>
      </div>
    </div>
  </div>
</BaseLayout>
