---
import BaseLayout from '../layouts/BaseLayout.astro';
---

<BaseLayout title="Contact | TrustAI" description="Get in touch with the TrustAI team">
  <!-- Background fire video -->
  <video
    src="/fire.mp4"
    autoplay
    muted
    loop
    playsinline
    class="absolute bottom-10 left-80 w-64 pointer-events-none invert z-1"
  />

  <div class="w-full min-h-screen bg-white mt-24 relative">
    <div class="mx-auto max-w-5xl">
      <div class="flex flex-col md:flex-row">
        <!-- Left container -->
        <div class="md:w-1/2 relative">
          <h1 class="absolute text-9xl font-bold text-black z-2">
            Get in Touch.
          </h1>
        </div>

        <!-- Right container -->
        <div class="md:w-1/2">
          <div class="bg-white pt-18">
            <form class="space-y-6">
              <input
                id="name"
                type="text"
                placeholder="Your name *"
                class="w-full px-4 py-2 border-b border-gray-300 focus:outline-none focus:border-black"
              />

              <input
                id="email"
                type="email"
                placeholder="Email *"
                class="w-full px-4 py-2 border-b border-gray-300 focus:outline-none focus:border-black"
              />

              <textarea
                id="message"
                placeholder="Your message"
                class="w-full h-32 px-4 py-2 border-b border-gray-300 focus:outline-none focus:border-black"
              />

              <button
                type="submit"
                class="group flex items-center justify-between w-full rounded-full bg-black px-6 py-3 text-white font-medium hover:cursor-pointer transition"
              >
                <span class="transition-all duration-200 group-hover:text-[1.1em] group-hover:tracking-tight">
                  Submit
                </span>
                <span class="flex h-3 w-3 items-center justify-center rounded-full bg-white transition group-hover:scale-110"></span>
              </button>

            </form>
          </div>
        </div>
      </div>
    </div>
  </div>
</BaseLayout>
