---
import { Image } from "astro:assets";
import Diamond from "./Diamond.astro";
---

<div
  id="hero"
  class="bg-black mr-1 ml-1 overflow-hidden box-border rounded-br-2xl rounded-bl-2xl transition-transform duration-300 relative"
  style="height: calc(100vh - 4.75rem); transform-origin: center;"
>
  <div class="absolute inset-0">
    <Diamond />
  </div>
  <div
    class="absolute left-7 top-9 z-10 text-white [text-shadow:0_2px_24px_rgba(0,0,0,0.35)]"
  >
    <div
      class="text-[clamp(12px,12vw,240px)] font-semibold leading-[0.9] tracking-[-0.02em]"
    >
      TrustAI
    </div>
  </div>
  <div
    class="absolute bottom-8 left-7 right-7 z-10 flex flex-col gap-4 text-white md:flex-row md:items-end md:justify-between"
  >
    <div class="max-w-180">
      <h1
        class="text-[clamp(22px,2.2vw,34px)] font-semibold tracking-[-0.01em]"
      >
        Governance for agentic RAG systems, designed to minimize
        hallucinations at scale
      </h1>
      <p
        class="mt-3 text-[14px] leading-relaxed tracking-[0.01em] text-white/80"
      >
        A verification-first layer for retrieval, policies, and evidence
      </p>
    </div>

    <div
      class="inline-flex max-w-full flex-col items-center rounded-xl bg-white px-6 py-4 shadow-lg md:ml-6"
    >
      <span class="text-lg font-medium text-orange-600">Backed by</span>
      <div class="flex min-w-0 flex-wrap items-center gap-2 sm:flex-nowrap">
        <img
          src="/yc.svg"
          alt="Y Combinator"
          class="h-[clamp(24px,6vw,42px)] w-[clamp(24px,6vw,42px)] shrink-0"
        />
        <span class="text-[clamp(14px,5vw,30px)] font-bold leading-none tracking-tight text-gray-900"
          >Combinator</span
        >
      </div>
    </div>
  </div>
</div>

<script>
  const hero = document.getElementById("hero");
  if (hero) {
    window.addEventListener("scroll", () => {
      const scrollY = window.scrollY;
      const scale = Math.max(0.5, 1 - scrollY / 20000);
      hero.style.transform = `scale(${scale})`;
    });
  }
</script>
