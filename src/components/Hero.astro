---
import { Image } from "astro:assets";
import Diamond from "./Diamond.astro";
---

<div
  id="hero"
  class="bg-black rounded-bl-3xl rounded-br-3xl mr-1 ml-1 overflow-hidden box-border transition-transform duration-300 relative"
  style="height: calc(100vh - 4.75rem); transform-origin: center;"
>
  <!-- Background image -->
  <div class="absolute inset-0">
    <Diamond />
  </div>
  <!-- Top-left title -->
  <div
    class="absolute left-7 top-9 z-10 text-white [text-shadow:0_2px_24px_rgba(0,0,0,0.35)]"
  >
    <div
      class="text-[clamp(12px,12vw,240px)] font-semibold leading-[0.9] tracking-[-0.02em]"
    >
      TrustAI
    </div>
  </div>

  <!-- Bottom-left description -->
  <div class="absolute bottom-8 left-7 z-10 max-w-[45rem] text-white">
    <h1 class="text-[clamp(22px,2.2vw,34px)] font-semibold tracking-[-0.01em]">
      Governance for agentic RAG systems, designed to minimize hallucinations at
      scale
    </h1>
    <p class="mt-3 text-[14px] leading-relaxed tracking-[0.01em] text-white/80">
      A verification-first layer for retrieval, policies, and evidence
    </p>
  </div>

  <div
    class="absolute m-2 bottom-4 right-4 z-10 inline-flex flex-col rounded-2xl items-center bg-white px-6 py-4 shadow-lg"
  >
    <span class="text-lg font-medium text-orange-600">Backed by</span>
    <div class="flex items-center gap-2">
      <img src="/yc.svg" alt="Y Combinator" class="h-12 w-12" />
      <span class="text-4xl font-bold tracking-tight text-gray-900"
        >Combinator</span
      >
    </div>
  </div>
</div>

<script>
  const hero = document.getElementById("hero");
  if (hero) {
    window.addEventListener("scroll", () => {
      const scrollY = window.scrollY;
      const scale = Math.max(0.5, 1 - scrollY / 20000);
      hero.style.transform = `scale(${scale})`;
    });
  }
</script>
